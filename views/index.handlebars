<div class="container">
    <div class="row">
        <div class="col-md">
            <h3>Burgers to eat!</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>{{burger_name}}    <button type="button" class="btn btn-primary devour" data-id="{{id}}">Devour!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <h3>Burgers that have been devoured!</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <h3>More Burgs?</h3>
            <form class="create-form">
                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>